<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_view_item"
    android:background="@drawable/et_hollow"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="6dp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/raceItem_rl"
    android:background="@drawable/et_hollow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/raceItem_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/raceTitle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Race Title"
                    android:textStyle="bold"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/_14sdp" />
                <TextView
                    android:id="@+id/raceId_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="id34dtfytvrftftyft"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/_10ssp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/race_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/raceItem_ll"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/race_share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_share"
                    android:backgroundTint="@color/bg" />
        </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>
